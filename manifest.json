{
    "manifest_version": 3,
    "name": "Capturador de Pesta√±as",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "image/icon1.ico",
        "48": "image/icon2.png",
        "128": "image/icon3.png"
      }
    },
    "host_permissions": ["<all_urls>"]
  }
  